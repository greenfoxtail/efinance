<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:daygrid="http://schemas.android.com/apk/res/foxtail.efinance.ecalendar.DayGridView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:gravity="fill" >
    
    <TextView android:id="@+id/lunar_info_id"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textSize="15px"
		android:text="壬辰年"
		/>   
    

        <foxtail.efinance.ecalendar.DayGridView
            android:layout_below="@id/lunar_info_id"
            android:id="@+id/days_grid_id"
            android:layout_width="fill_parent"
            android:layout_height="280dip"/>

     
    
    <RelativeLayout android:id="@+id/relativeLayout_top_bar"
        android:layout_below="@id/days_grid_id"
	    android:background="@drawable/shape_topbar"
		android:layout_width="fill_parent" android:layout_height="50dip">

		<Button android:id="@+id/month_dec_id"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:background="@drawable/arrow_dec"
		android:layout_marginBottom="4dip" android:layout_marginLeft="10dip"
		android:layout_alignParentBottom="true">
	    </Button>

		<TextView android:id="@+id/year_month_text_id"
		android:layout_toRightOf="@id/month_dec_id"
		android:layout_marginLeft="10dip"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginBottom="5dip"
		android:textSize="20dip"
		/>    

		<Button android:id="@+id/month_inc_id"
		android:layout_toRightOf="@id/year_month_text_id"
		android:layout_marginLeft="10dip"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:background="@drawable/arrow_inc"
		android:layout_marginBottom="4dip"
		android:layout_alignParentBottom="true">
	    </Button>

		<Button android:id="@+id/today_id"
		android:layout_toRightOf="@id/month_inc_id"
		android:layout_marginLeft="50dip"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:background="@drawable/back"
		android:layout_marginBottom="4dip"
		android:layout_alignParentBottom="true">    
		</Button>

	</RelativeLayout>
</RelativeLayout>